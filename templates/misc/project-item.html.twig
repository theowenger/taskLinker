{% extends 'base.html.twig' %}
{% block body %}

    {% include 'component/header.html.twig' with {'active': 'project'} %}

    <main>
        <header>
            <div id="current-user"></div>
            <div id="title-page">
                <div class="flex-header">
                    <h1>{{ project.name }}</h1>
                    <div class="flex-row user-list">
                        {% for employee in employees %}
                            <div class="avatar">{{ employee.avatar }}</div>
                        {% endfor %}
                    </div>
                    <a class="button" href="{{ path('app_project_item_edit', {'id': project.id}) }}">Modifier</a>
                </div>
            </div>
        </header>
        <body>
        <div id="content">
            <div id="tasks-container">
                {% for status in ['To Do', 'Doing', 'Done'] %}
                    <div class="task-column">
                        <h2>{{ status }}</h2>
                        <div class="tasks-list">
                            {% for task in tasks %}
                                {% if task.status is same as (status) %}
                                    <a class="task"
                                       href="{{ path('app_task_item', {'id': task.id, 'projectId': project.id}) }}">
                                        <h3>{{ task.name }}</h3>
                                        <p>{{ task.description }}</p>
                                        <div class="task-infos">
                                            <div class="task-deadline">
                                                <i class="fa-regular fa-calendar"></i>
                                                {{ task.deadline|date('d/m/Y') }}
                                            </div>

                                            {% if task.employee is not null %}
                                                <div class="mini-user">
                                                    {{ task.employee.avatar }}
                                                </div>
                                            {% endif %}

                                        </div>
                                    </a>
                                {% endif %}
                            {% endfor %}
                            <a href="{{ path('app_task_item', {'id': null, 'projectId': project.id, "status": status}) }}"
                               class="task-add">
                                + Ajouter une t√¢che
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        </body>
    </main>

{% endblock %}